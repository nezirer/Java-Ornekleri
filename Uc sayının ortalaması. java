import java.util.Scanner;

public class Main {
    public static void main(String[] args) {

        int sayi1,sayi2,sayi3,ortalama;
        
        
        Scanner input = new Scanner(System.in);
        System.out.println("Girilen üç sayının ortalamsını hesaplayan programa hoş geldiniz.");
        System.out.println("Hesaplamak istediğiniz sayıları sırayla giriniz.");
        
        sayi1 = input.nextInt();
        sayi2 = input.nextInt();
        sayi3 = input.nextInt();
        
        ortalama = (sayi1 + sayi2 + sayi3)/3;

        System.out.println("Sayıların ortalaması = " + ortalama);




    }
}
